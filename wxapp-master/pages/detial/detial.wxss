.block-area {
	background-color: #fff;
	padding: 30rpx;
}

.banner image {
	width: 100%;
	height: 400rpx;
}

.title {
	font-size: 40rpx;
	line-height: 1.2;
}

.block-info {
	margin-top: 20rpx;
	padding: 10rpx 0;
}

.block-info-left {
	float: left;
	width: 50%;
}

